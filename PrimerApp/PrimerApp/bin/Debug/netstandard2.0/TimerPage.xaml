<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PrimerApp.ViewModels"
             x:Class="PrimerApp.TimerPage">
    
    <ContentPage.BindingContext>
        <viewmodels:TimerViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <AbsoluteLayout>

            <StackLayout>
                <Frame BackgroundColor="#678e00" Padding="24" CornerRadius="0">
                    <Label Text=" Un patrullero llegara en el tiempo indicado abajo: " 
                               HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
                </Frame>

                <Label Text="{Binding TotalSeconds, StringFormat='{0:mm\\:ss}'}" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="60" TextColor="Green"></Label>

            </StackLayout>

            <ImageButton
                AbsoluteLayout.LayoutBounds="0.95,0.95,80,80"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="#729E00"
                CornerRadius="40"
                HeightRequest="80"
                Source="alertas.png"
                WidthRequest="80"
             />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>