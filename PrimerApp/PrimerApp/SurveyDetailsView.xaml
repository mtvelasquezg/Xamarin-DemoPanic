<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:PrimerApp.ViewModels"
             x:Class="PrimerApp.SurveyDetailsView">

    <ContentPage.BindingContext>
        <viewmodels:SurveyDetailsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre completo" />
            <Entry Text="{Binding Name, Mode=TwoWay}" />

            <Label Text="Comida favorita" />
            <Entry Text="{Binding FavoriteFood, Mode=TwoWay}" />

            <Button Text="Ok"
                    Command="{Binding SaveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>